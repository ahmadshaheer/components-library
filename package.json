{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build-storybook": "turbo run build-storybook -- --output-dir=storybook-static",
    "chromatic": "pnpm install && pnpm build --filter=docs^... && turbo run chromatic -- --project-token=chpt_aedfb1e8404456c",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "update-version": "changeset && changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "inquirer": "^11.0.2",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2"
  },
  "packageManager": "pnpm@8.15.6",
  "name": "design-system"
}
